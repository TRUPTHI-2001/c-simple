#include<stdio.h>
void main()
{
	int a[50];
	int i,j,k;
	int sum,n;
	printf("enter the array size\n");
	scanf("%d",&n);
	printf("enter the array elemnts\n");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
printf("enter the sum");
scanf("%d",&sum);
	for(i=0;i<n;i++)
	{
		for(j=i+1;j<n;j++)
		{
			if(a[i]+a[j]==sum)
			{
				printf("%d %d",i,j);
			}
		}

	}
}
